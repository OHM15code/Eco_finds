<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Sales - EcoFinds</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header class="header">
    <div class="container header-content">
      <div class="logo">Eco<span>Finds</span></div>
      <button class="nav-toggle">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <nav>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/products">Browse</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/products/new">Sell Item</a></li>
          <li><a href="/cart">Cart</a></li>
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/auth/logout">Logout</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main class="container">
    <h1>Your Sales</h1>
    
    <% if (sales && sales.length > 0) { %>
      <div class="sales-summary">
        <h3>Total Sales: <%= sales.length %></h3>
        <h3>Total Revenue: $<%= sales.reduce((total, sale) => total + (sale.price * sale.quantity), 0).toFixed(2) %></h3>
      </div>
      
      <div class="sales-list">
        <table class="sales-table">
          <thead>
            <tr>
              <th>Date</th>
              <th>Order #</th>
              <th>Product</th>
              <th>Buyer</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <% sales.forEach(sale => { %>
              <tr>
                <td><%= new Date(sale.created_at).toLocaleDateString() %></td>
                <td><%= sale.purchase_id %></td>
                <td><a href="/products/<%= sale.product_id %>"><%= sale.title %></a></td>
                <td><%= sale.buyer_name %></td>
                <td><%= sale.quantity %></td>
                <td>$<%= sale.price.toFixed(2) %></td>
                <td>$<%= (sale.price * sale.quantity).toFixed(2) %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="empty-sales">
        <h2>No sales yet</h2>
        <p>You haven't sold any products yet.</p>
        <a href="/products/new" class="btn btn-primary">Add a Product to Sell</a>
      </div>
    <% } %>
  </main>

  <script src="/js/main.js"></script>
</body>
</html>