<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Purchase History - EcoFinds</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header class="header">
    <div class="container header-content">
      <div class="logo">Eco<span>Finds</span></div>
      <button class="nav-toggle">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <nav>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/products">Browse</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/products/new">Sell Item</a></li>
          <li><a href="/cart">Cart</a></li>
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/auth/logout">Logout</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main class="container">
    <h1>Your Purchase History</h1>
    
    <% if (purchases && purchases.length > 0) { %>
      <div class="purchase-history">
        <% purchases.forEach(purchase => { %>
          <div class="purchase-card">
            <div class="purchase-header">
              <h3>Order #<%= purchase.id %></h3>
              <span class="purchase-date"><%= new Date(purchase.created_at).toLocaleDateString() %></span>
            </div>
            
            <div class="purchase-details">
              <p><strong>Items:</strong> <%= purchase.item_count %></p>
              <p><strong>Total:</strong> $<%= purchase.total_amount.toFixed(2) %></p>
            </div>
            
            <div class="purchase-actions">
              <a href="/purchases/<%= purchase.id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="empty-purchases">
        <h2>No purchase history</h2>
        <p>You haven't made any purchases yet.</p>
        <a href="/products" class="btn btn-primary">Browse Products</a>
      </div>
    <% } %>
  </main>

  <script src="/js/main.js"></script>
</body>
</html>